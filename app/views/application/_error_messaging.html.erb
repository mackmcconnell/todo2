<div id="error_container">

    <div class="twelve columns">
      <% if flash[:error] %>
        <div class="error"><%= flash[:error] %></div>
      <% end %>

      <%if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>

      <%if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
      <% end %>
    </div><!-- //.twelve.columns -->

</div><!-- //.container -->