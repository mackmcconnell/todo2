
<h1><%= best_in_place @list, :title %></h1>

<%= render 'tasks/form' %>

  <thead>Tasks</thead>
    <table class = "table table-hover">
      <% @tasks.each do |task| %>

      <tr>
        <td><%= best_in_place task, :description, :path => list_task_path(@list, task), :method => "put" %></td>
        <td style = "text-align:right;"><%= link_to '', list_task_path(@list, task), :method => "delete", :class => 'icon-ok' %></td>
      </tr>


    <% end %>
  </table>


<%= link_to 'New Task', new_list_task_path(@list), :method => :get %>
<br>
<%= link_to 'Lists', lists_path %>
