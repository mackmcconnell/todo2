<h1><%= best_in_place @list, :title %></h1>
  <thead>Tasks</thead> 
  <table class = "table table-hover">  
    <% @tasks.each do |task| %>
			<tr>
    		<td><%= best_in_place task, :description, :action => :post, :path => edit_list_task_path(@list, task) %></td>
      	<td style = "text-align:right;"><%= link_to "Edit", edit_list_task_path(@list, task)%>  <%= link_to "Delete", list_task_path(@list, task), :method => :delete %></td>
			</tr>
  	<% end %>
	</table>


<br>

<%= link_to 'New Task', new_list_task_path(@list), :method => :get %>
